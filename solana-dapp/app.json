{
  "expo": {
    "name": "PhotoSync - Solana dApp",
    "slug": "photosync-solana",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "description": "Decentralized photo backup powered by Solana blockchain. Secure, private, and censorship-resistant cloud storage for your memories.",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.photosync.solana.dapp",
      "buildNumber": "1.0.0",
      "deploymentTarget": "13.0",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "PhotoSync needs access to your photos to back them up to your secure private cloud.",
        "NSPhotoLibraryAddUsageDescription": "PhotoSync needs permission to save restored photos to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#5E35B1"
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_MEDIA_LOCATION",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "INTERNET"
      ],
      "package": "com.photosync.solana.dapp",
      "versionCode": 1,
      "minSdkVersion": 23,
      "targetSdkVersion": 34,
      "compileSdkVersion": 34,
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow PhotoSync to access your photos.",
          "savePhotosPermission": "Allow PhotoSync to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}
